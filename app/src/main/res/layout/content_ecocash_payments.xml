<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.PaymentEcocash"
    tools:showIn="@layout/activity_ecocash_payments">

    <TextView
        android:id="@+id/tvNumber"
        android:text="Ecocash number"
        android:textSize="16sp"
        android:textColor="#393939"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:onClick="changeSize"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv3"
        android:text="*151*1*1*077422...."
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv3"
        android:visibility="gone"
        app:srcCompat="@drawable/profile_tick"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/tvNumber"
        app:layout_constraintBottom_toBottomOf="@+id/tvNumber"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <View
        android:id="@+id/view3"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />



    <TextView
        android:id="@+id/tvMerchant"
        android:text="Ecocash cashout"
        android:textSize="16sp"
        android:textColor="#393939"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:onClick="changeSize"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv1"
        android:text="*151*3*1*..."
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMerchant"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv1"
        android:visibility="gone"
        app:srcCompat="@drawable/profile_tick"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/tvMerchant"
        app:layout_constraintBottom_toBottomOf="@+id/tvMerchant"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <View
        android:id="@+id/viewX"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewMerchant"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewX"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />





    <TextView
        android:id="@+id/tvBiller"
        android:text="Ecocash pay merchant"
        android:textSize="16sp"
        android:textColor="#393939"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:onClick="changeSize"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv2"
        android:text="*151*2*2*..."
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBiller"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv2"
        android:visibility="gone"
        app:srcCompat="@drawable/profile_tick"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/tvBiller"
        app:layout_constraintBottom_toBottomOf="@+id/tvBiller"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <View
        android:id="@+id/view2"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewBiller"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />





    <EditText
        android:id="@+id/etEcocashCode"
        android:hint="Ecocash code / mobile number"
        android:textSize="16sp"
        android:textColor="#393939"
        android:textColorHint="#939393"
        android:fontFamily="serif"
        android:inputType="number"
        android:layout_marginTop="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/profile_money"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/etEcocashCode"
        app:layout_constraintBottom_toBottomOf="@+id/etEcocashCode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/etEcocashName"
        android:hint="Ecocash name"
        android:textSize="16sp"
        android:textColor="#393939"
        android:textColorHint="#939393"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/etEcocashCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/profile_person"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/etEcocashName"
        app:layout_constraintBottom_toBottomOf="@+id/etEcocashName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tvNote"
        android:text="this feature is used for those who would want to sell tickets on the platform otherwise it's not a mandatory step. Sales from ticket purchases will be directed to the event organiser, we do not handle money from ticket sales for now."
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/etEcocashName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />




    <android.support.v7.widget.CardView
        android:id="@+id/cardSave"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#008080"
        card_view:cardCornerRadius="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNote"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:text="SAVE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
