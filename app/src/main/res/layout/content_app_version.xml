<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.AppVersion"
    tools:showIn="@layout/activity_app_version">

    <EditText
        android:id="@+id/etVersion"
        android:hint="App version"
        android:textSize="16sp"
        android:textColor="#393939"
        android:textColorHint="#939393"
        android:fontFamily="serif"
        android:inputType="number"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/profile_title"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/etVersion"
        app:layout_constraintBottom_toBottomOf="@+id/etVersion"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <EditText
        android:id="@+id/etIndividualPriority"
        android:hint="Individual priority"
        android:textSize="16sp"
        android:textColor="#393939"
        android:textColorHint="#939393"
        android:fontFamily="serif"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/etVersion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/ic_venue"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/etIndividualPriority"
        app:layout_constraintBottom_toBottomOf="@+id/etIndividualPriority"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <EditText
        android:id="@+id/etBusinessPriority"
        android:hint="Business priority"
        android:textSize="16sp"
        android:textColor="#393939"
        android:textColorHint="#939393"
        android:fontFamily="serif"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/etIndividualPriority"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        app:srcCompat="@drawable/ic_venue"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/etBusinessPriority"
        app:layout_constraintBottom_toBottomOf="@+id/etBusinessPriority"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <ImageView
        app:srcCompat="@drawable/profile_send"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/viewSend"
        app:layout_constraintRight_toRightOf="@+id/viewSend"
        app:layout_constraintBottom_toBottomOf="@+id/viewSend"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <View
        android:id="@+id/viewSend"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/etBusinessPriority"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewSend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="60dp" />

</android.support.constraint.ConstraintLayout>
