<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.Size"
    tools:showIn="@layout/activity_size">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:text="1 - 3 Employees"
            android:textSize="16sp"
            android:textColor="#393939"
            android:fontFamily="serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="changeSize"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv3"
            android:visibility="gone"
            app:srcCompat="@drawable/profile_tick"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/view5"
            android:background="@color/line_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px" />



        <TextView
            android:id="@+id/tv2"
            android:text="4 - 10 Employees"
            android:textSize="16sp"
            android:textColor="#393939"
            android:fontFamily="serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:onClick="changeSize"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv10"
            android:visibility="gone"
            app:srcCompat="@drawable/profile_tick"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/view6"
            android:background="@color/line_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px" />



        <TextView
            android:id="@+id/tv3"
            android:text="11 - 30 Employees"
            android:textSize="16sp"
            android:textColor="#393939"
            android:fontFamily="serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="changeSize"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv30"
            android:visibility="gone"
            app:srcCompat="@drawable/profile_tick"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/view7"
            android:background="@color/line_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px" />



        <TextView
            android:id="@+id/tv4"
            android:text="31 - 50 Employees"
            android:textSize="16sp"
            android:textColor="#393939"
            android:fontFamily="serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="changeSize"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv50"
            android:visibility="gone"
            app:srcCompat="@drawable/profile_tick"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/view8"
            android:background="@color/line_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px" />



        <TextView
            android:id="@+id/tv5"
            android:text="Over 50 Employees"
            android:textSize="16sp"
            android:textColor="#393939"
            android:fontFamily="serif"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="changeSize"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv51"
            android:visibility="gone"
            app:srcCompat="@drawable/profile_tick"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/view9"
            android:background="@color/line_divider"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="1px" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
