<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.BusinessDetails"
    tools:showIn="@layout/activity_business_details">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAccount"
            android:text="Business Account"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#313131"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivVerified"
            android:src="@drawable/ic_unverified"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvAccount"
            app:layout_constraintBottom_toBottomOf="@+id/tvAccount"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp" />



        <TextView
            android:id="@+id/tvLocation"
            android:hint="Location"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#1b1b1b"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAccount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_venue"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvLocation"
            app:layout_constraintBottom_toBottomOf="@+id/tvLocation"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="22dp"
            android:layout_height="22dp" />



        <TextView
            android:id="@+id/tvCategory"
            android:hint="Business Category"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#1b1b1b"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/profile_category"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvCategory"
            app:layout_constraintBottom_toBottomOf="@+id/tvCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp" />



        <TextView
            android:id="@+id/tvEmail"
            android:text="Business Email"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="#008080"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/profile_mail"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvEmail"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp" />



        <TextView
            android:id="@+id/tvWebsite"
            android:text="Business Website"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="#008080"
            android:layout_marginTop="30dp"
            android:paddingStart="70dp"
            android:paddingEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/profile_website"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvWebsite"
            app:layout_constraintBottom_toBottomOf="@+id/tvWebsite"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"/>



        <TextView
            android:id="@+id/tvDescription"
            android:hint="Business Description"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#1b1b1b"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWebsite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/profile_description"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
