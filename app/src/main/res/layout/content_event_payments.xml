<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.PaymentEvent"
    tools:showIn="@layout/activity_event_payments">

    <TextView
        android:id="@+id/tvWhatsApp"
        android:text="Pay using Ecocash"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSuccessfulReferrals"
        android:text="enter your pin to complete the payment process"
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatsApp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/viewX"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessfulReferrals"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewEcocash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewX"
        android:layout_width="0dp"
        android:layout_height="0dp" />




    <TextView
        android:id="@+id/tvTwitter"
        android:text="Pay using promo code"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPromoCode"
        android:text="the promotion code is: "
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTwitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view2"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPromoCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewPromoCode"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />




    <TextView
        android:id="@+id/tvLoyaltyPoints"
        android:visibility="gone"
        android:text="Pay using your loyalty points"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLoyalty"
        android:visibility="gone"
        android:text="number of loyalty points: "
        android:textSize="12sp"
        android:textColor="#acacac"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLoyaltyPoints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view3"
        android:visibility="gone"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLoyalty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewLoyalty"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</android.support.constraint.ConstraintLayout>
