<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.myevents.app.Account"
    tools:showIn="@layout/activity_account">

    <TextView
        android:id="@+id/tvWhatsApp"
        android:visibility="gone"
        android:text="Delete your account"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSuccessfulReferrals"
        android:visibility="gone"
        android:text="all your information will be lost and backups deleted"
        android:textSize="12sp"
        android:textColor="#7b7b7b"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatsApp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/viewX"
        android:visibility="gone"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessfulReferrals"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewX"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <TextView
        android:id="@+id/tvTwitter"
        android:text="Log out"
        android:textSize="16sp"
        android:textColor="#cf0000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOpenTimes"
        android:text="this "
        android:textSize="12sp"
        android:textColor="#acacac"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvTwitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view2"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOpenTimes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/viewLogOut"
        app:layout_constraintTop_toBottomOf="@+id/viewX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>
